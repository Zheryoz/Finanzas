<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:typeface">serif</item>

        <item name="android:textViewStyle">@style/RobotoGlobalStyle</item>
        <item name="android:spinnerItemStyle">@style/RobotoGlobalStyle</item>
        <item name="android:editTextStyle">@style/RobotoGlobalStyle</item>
        <item name="android:listViewStyle">@style/RobotoGlobalStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoGlobalStyle">
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="RobotoButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/default_button</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
</resources>
